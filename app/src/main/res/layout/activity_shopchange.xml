<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopchange"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="11sp"
            android:layout_weight="1">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改店铺信息"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="4">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="11sp"
            android:layout_weight="1">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <EditText
            android:id="@+id/shopname_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="修改店铺名称"
            android:singleLine="true"
            android:maxLength="10"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="#FFFFFF">
        </EditText>
        <Button
            android:id="@+id/btn_shopnamechange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改">
        </Button>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8sp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <EditText
            android:id="@+id/shopintro_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="修改店铺简介"
            android:singleLine="true"
            android:maxLength="45"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="#FFFFFF">
        </EditText>
        <Button
            android:id="@+id/btn_shopintrochange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改">
        </Button>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8sp">
    </TextView>
    <Button
        android:id="@+id/shopphoto_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="点此更换店铺封面">
    </Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="38sp">
    </TextView>
    <Button
        android:id="@+id/btn_shopchangefinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:background="#FFFFFF">
    </Button>

</LinearLayout>